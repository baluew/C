#include <iostream>
using namespace std;

    int q = 1;

////// Ôóíêöèÿ ÏèÑêà //////
//÷åðåç ïàðàìåòð ïðèíèìàåò ÷èñëî èòåðàöèé

int pisc (int t)
{
    int i;
    i = t;
    for ( i=1; i < t; i++)
     {
             cout << '\x07' << endl;
             // '\x07' ëèòåðà = bel

             }
}



////// Îñíîâíàÿ ôóíêöèÿ //////
int main ()
{
    // ëîêàëüíûå ïåðåìåííûå
    int t = 0;
    int q = 0;   
 
    do
    {
        
        
        cout << "number of cycles : ";  
        cin >> t;
        pisc (t);
        cout << "Exit ? (1 - Yes  all - NO) ";
        cin >> q;
    
    }
    while ( q != 1);
       
       
    return 0;    
   // P.S. êàê ñäåëàòü òàê ÷òîáû ìîæíî áûëî ïðèðûàòü ðàáîòàþùèþ ôóíêöèþ, 
   // èëè ïî ñóùåñòâó - êàê îñòàíàâëèâàòü âûïîëíåíèå ôåíêöèè ?
 }
     
